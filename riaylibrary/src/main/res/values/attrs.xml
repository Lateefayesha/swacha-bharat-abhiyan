<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyZoomageView">
        <attr format="boolean" name="zoomage_zoomable"/>
        <attr format="boolean" name="zoomage_translatable"/>
        <attr format="boolean" name="zoomage_restrictBounds"/>
        <attr format="boolean" name="zoomage_animateOnReset"/>
        <attr format="boolean" name="zoomage_autoCenter"/>
        <attr format="float" name="zoomage_minScale"/>
        <attr format="float" name="zoomage_maxScale"/>
        <attr format="enum" name="zoomage_autoResetMode">
            <enum name="UNDER" value="0"/>
            <enum name="OVER" value="1"/>
            <enum name="ALWAYS" value="2"/>
            <enum name="NEVER" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr format="dimension" name="border_width"/>
        <attr format="color" name="border_color"/>
        <attr format="boolean" name="border_overlay"/>
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gt_color_list" format="reference"/>
        <attr name="gt_gradient_direction" format="enum">
            <enum name="left" value="0"/>
            <enum name="up" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="gt_gradient_angle" format="integer"/>
    </declare-styleable>
</resources>