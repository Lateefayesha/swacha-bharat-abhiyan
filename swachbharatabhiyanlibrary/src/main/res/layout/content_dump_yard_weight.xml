<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DumpYardWeightActivity"
    tools:showIn="@layout/activity_dump_yard_weight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_10_dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_dry_weight"
                style="@style/MyEditTextStyleLight"
                android:hint="@string/total_dry_weight"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_wet_weight"
                style="@style/MyEditTextStyleLight"
                android:hint="@string/total_wet_weight"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_total_weight"
                style="@style/MyEditTextStyleLight"
                android:hint="@string/total_weight"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal" android:visibility="gone">
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KG"
                android:button="@null"
                android:background="@drawable/radio_selector"
                android:checked="true"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TONS"
                android:button="@null"
                android:background="@drawable/radio_selector"
                android:checked="false"/>
        </RadioGroup>

        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/btn_submit_dump"
            android:text="@string/submit_txt"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</ScrollView>