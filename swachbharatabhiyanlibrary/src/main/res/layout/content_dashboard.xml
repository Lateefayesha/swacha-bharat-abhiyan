<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DashboardActivity"
    tools:showIn="@layout/activity_dashboard">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_screen_vector"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_130_dp"
        android:layout_marginTop="@dimen/dim_45_dp"
        android:layout_marginStart="@dimen/dimen_15_dp"
        android:layout_marginEnd="@dimen/dimen_15_dp"
        app:cardCornerRadius="@dimen/padding_margin_layout"
        android:id="@+id/user_details_card"
        app:cardElevation="@dimen/padding_margin_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_margin_layout_double">

            <ImageView
                android:contentDescription="@string/hyphen"
                android:scaleType="fitCenter"
                android:layout_width="@dimen/dimen_140_dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="@dimen/padding_margin_layout"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:paddingBottom="@dimen/padding_margin_layout">

                <TextView
                    android:id="@+id/user_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hyphen"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/user_emp_id_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_full_name"
                    android:text="Employee ID :"
                    android:textColor="@color/colorDefault"/>

                <TextView
                    android:id="@+id/user_emp_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hyphen"
                    android:layout_marginStart="@dimen/padding_margin_layout"
                    android:layout_alignBaseline="@id/user_emp_id_lbl"
                    android:layout_toEndOf="@id/user_emp_id_lbl"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/card_radius"
                    android:paddingEnd="@dimen/card_radius"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/user_attendance_status"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:text="@string/status_off_duty"
                        android:gravity="center_vertical|start"
                        android:textColor="@color/cart_count_color"/>

                    <TextView
                        android:id="@+id/user_vehicle_type"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="match_parent"
                        android:text="(Truck)"
                        android:gravity="center_vertical|start"
                        android:textColor="@color/colorDefault"/>

                    <Switch
                        android:id="@+id/user_attendance_toggle"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:gravity="end"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <GridView
        android:id="@+id/menu_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details_card"
        android:layout_marginTop="@dimen/padding_margin_layout"
        android:numColumns="2"/>

</RelativeLayout>