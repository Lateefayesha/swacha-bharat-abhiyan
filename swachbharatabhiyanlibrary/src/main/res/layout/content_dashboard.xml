<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.DashboardActivity"
    tools:showIn="@layout/activity_dashboard">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_home_screen_vector"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="@dimen/padding_margin_layout"
        android:id="@+id/user_details_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_margin_layout_double">

            <ImageView
                android:scaleType="fitCenter"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="@dimen/padding_margin_layout"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:paddingBottom="@dimen/padding_margin_layout">

                <TextView
                    android:id="@+id/user_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/user_emp_id_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_full_name"
                    android:text="Employee ID :"
                    android:textColor="@color/colorDefault"/>

                <TextView
                    android:id="@+id/user_emp_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginStart="@dimen/padding_margin_layout"
                    android:layout_alignBaseline="@id/user_emp_id_lbl"
                    android:layout_toEndOf="@id/user_emp_id_lbl"/>

                <TextView
                    android:id="@+id/user_attendance_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="off duty"
                    android:textColor="@color/cart_count_color"
                    android:layout_alignParentBottom="true"/>

                <Switch
                    android:id="@+id/user_attendance_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <GridView
        android:id="@+id/menu_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details_card"
        android:layout_marginTop="@dimen/padding_margin_layout"
        android:numColumns="2"/>

</RelativeLayout>