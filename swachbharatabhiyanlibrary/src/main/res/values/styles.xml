<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/rounded_corners_text_view</item>-->
        <item name="android:layout_marginTop">@dimen/edit_text_margin_padding</item>
        <item name="android:backgroundTint">@color/colorDefault</item>
        <item name="android:paddingBottom">@dimen/edit_text_margin_padding</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>