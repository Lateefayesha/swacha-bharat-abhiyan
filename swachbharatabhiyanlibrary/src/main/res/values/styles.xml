<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SBA.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SBA.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditTextStyleLight" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <!--<item name="android:background">@drawable/rounded_corners_text_view</item>-->
        <item name="android:layout_marginTop">@dimen/edit_text_margin_padding</item>
        <item name="android:backgroundTint">@color/colorDefault</item>
        <item name="android:paddingBottom">@dimen/edit_text_margin_padding</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyEditTextStyleDark" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <!--<item name="android:background">@drawable/rounded_corners_text_view</item>-->
        <item name="android:layout_marginTop">@dimen/edit_text_margin_padding</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/edit_text_margin_padding</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MyEditTextStylelight.Dark" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <!--<item name="android:background">@drawable/rounded_corners_text_view</item>-->
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/edit_text_margin_padding</item>
    </style>

    <style name="MyfabButton" parent="AppTheme.NoActionBar">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/title_margin</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_orange_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>